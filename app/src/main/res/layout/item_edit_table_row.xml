        android:paddingStart="@dimen/fragment_child_side2"
        android:paddingEnd="@dimen/fragment_child_side2"
        android:layout_marginBottom="@dimen/fragment_child_side2"
        android:layout_marginEnd="@dimen/fragment_child_side2"
        android:background="@android:color/white"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:text=""
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/text_size_medium"/>

    <TextView
        android:id="@+id/textChart04Point"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/fragment_child_side2"
        android:paddingEnd="@dimen/fragment_child_side2"
        android:layout_marginBottom="@dimen/fragment_child_side2"
        android:layout_marginEnd="@dimen/fragment_child_side2"
        android:background="@android:color/white"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:text=""
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/text_size_medium"/>

    <TextView
        android:id="@+id/textChart05Point"
        android:layout_width="0dp"
